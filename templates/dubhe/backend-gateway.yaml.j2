---
apiVersion: v1
kind: Service
metadata:
  name: backend-gateway
spec:
  selector:
    app: backend-gateway
  ports:
    - name: http
      port: 8800
      targetPort: 8800
      protocol: TCP

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: backend-gateway
  labels:
    app: backend-gateway
spec:
  replicas: 1
  selector:
    matchLabels:
      app: backend-gateway
  template:
    metadata:
      labels:
        app: backend-gateway
    spec:
      volumes:
        - name: dubhe-vol
          hostPath:
            path: {{ .Values.dubhe.hostPath }}
        - name: dubhe
          configMap:
            defaultMode: 0755
            name: dubhe
      initContainers:
        - name: wait-for-service
          image: docker.io/buxiaomo/curl:latest
          command: 
          - 'sh'
          - '-c'
          - |
            set -x
            until curl -sf http://nacos:8848/nacos; do
              echo "Waiting for service to be ready..."
              sleep 5
            done

            echo "Service is ready."
      containers:
        - name: backend-gateway
          image: "{{ .Values.dubhe.image.host }}/{{ .Values.dubhe.image.repository }}/gateway:{{ .Values.dubhe.image.tag }}"
          # image: "192.168.2.228:5000/enlin/dubhe-java:v1"
          # command: ["/bin/bash", "-c", "cd /data/ && java -Xms1024m -Xmx1024m   -jar gateway-0.0.1-SNAPSHOT-exec.jar --spring.profiles.active=prod"]
          imagePullPolicy: IfNotPresent
          volumeMounts:
            - name: dubhe-vol
              mountPath: /nfs
            - name: dubhe
              mountPath: /app/bootstrap-prod.yml
              subPath: bootstrap-prod.yml
          ports:
            - name: http
              containerPort: 8800
              protocol: TCP
          livenessProbe:
            initialDelaySeconds: 10
            periodSeconds: 10
            timeoutSeconds: 5
            tcpSocket:
              port: 8800
          readinessProbe:
            initialDelaySeconds: 5
            periodSeconds: 10
            timeoutSeconds: 5
            tcpSocket:
              port: 8800
          env:
            - name: TZ
              value: "Asia/Shanghai"
            - name: SPRING_PROFILES_ACTIVE
              value: "prod"
